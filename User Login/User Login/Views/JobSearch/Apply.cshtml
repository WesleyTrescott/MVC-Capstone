                    <label for="inputState" class="col-md-4 control-label visible-sm visible-xs">State*</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(u => u.State, null, new { @class = "form-control", @placeholder = "State", @id = "inputState" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="inputCountry" class="col-md-4 control-label label label-default hidden-sm hidden-xs" style="text-align:center; font-size:14px;">Country*</label>
                    <label for="inputCountry" class="col-md-4 control-label visible-sm visible-xs">Country*</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(u => u.Country, null, new { @class = "form-control", @placeholder = "Country", @id = "inputCountry" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="inputNumber" class="col-md-4 control-label label label-default hidden-sm hidden-xs" style="text-align:center; font-size:14px;">Phone Number</label>
                    <label for="inputNumber" class="col-md-4 control-label visible-sm visible-xs">Phone Number</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(u => u.PhoneNumber, null, new { @class = "form-control", @placeholder = "Phone Number (ex: 1234567890)", @id = "inputNumber" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
