<div class="container-fluid">
    <form class="form-horizontal" action="@Url.Action("Apply", "JobSearch")" role="form" method="post" enctype="multipart/form-data">
        <div>
            @Html.ValidationSummary("Application could not submitted.", new { @class = "alert alert-danger centered" })
            <br />
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="" class="col-md-4 control-label label label-default hidden-sm hidden-xs" style="text-align:center; font-size:14px;"></label>
                    <label for="" class="col-md-4 control-label visible-sm visible-xs"></label>
                    <div class="col-md-8">
                        @Html.HiddenFor(u => u.EmailId)
                        @Html.HiddenFor(u => u.JobId)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="inputFName" class="col-md-4 control-label label label-default hidden-sm hidden-xs" style="text-align:center; font-size:14px;">First Name*</label>
                    <label for="inputFName" class="col-md-4 control-label visible-sm visible-xs">First Name*</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(u => u.FirstName, null, new { @class = "form-control", @placeholder = "First Name", @id = "inputFName" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 hidden-sm hidden-xs"></div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="inputLName" class="col-md-4 control-label label label-default hidden-sm hidden-xs" style="text-align:center; font-size:14px;">Last Name*</label>
