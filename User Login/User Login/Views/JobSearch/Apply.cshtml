                    <label for="inputCity" class="col-md-4 control-label visible-sm visible-xs">City*</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(u => u.City, null, new { @class = "form-control", @placeholder = "City", @id = "inputCity" })
                    </div>
                </div>
            </div>
        </div>
