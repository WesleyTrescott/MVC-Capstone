<script type="text/javascript">
    $document().ready(function(){
        $('#jobDetails').dataTable();
    });
</script>

<table id="jobDetails" align="left" cellpadding="2500" class="pagination" data-pagination="true" data-search="true">
    <tr class="rowSpace">
        <th>
            Position:
        </th>
        <th>
            @Html.Encode(Model.Position)
        </th>
    </tr>
    <tr class="rowSpace">
        <th style="word-wrap:normal">
            Description:
        </th>
        <th>
            @Html.Encode(Model.Description)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            Location:
        </th>
        <th>
            @Html.Encode(Model.City_Name), @Html.Encode(Model.State_Name), @Html.Encode(Model.Country_Name)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            Required Skills:
        </th>
        <th>
            @Html.Encode(Model.Required_Skills)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            Customer:
        </th>
        <th>
            @Html.Encode(Model.Customer)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            Start Date:
        </th>
        <th>
            @Html.Encode(Model.Start_Date)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            End Date:
        </th>
        <th>
            @Html.Encode(Model.End_Date)
        </th>
    </tr>
    <tr class="rowSpace">
        <th>
            Salary:
        </th>
        <th>
            @Html.Encode(Model.Pay_Rate)
        </th>
    </tr>
</table>

